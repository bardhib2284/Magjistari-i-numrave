<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:layout_marginTop="60dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:text="Welcome to the number wizard. I will try and guess your number. Choose a number from 1-1000 and dont tell me the number till i find it, you can tell me if its higher, lower or if i guessed it right. I will find your number faster than you think." />
    <TextView
        android:id="@+id/text_view_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Is Your Number : 5000" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/button_lower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lower"/>
        <Button
            android:id="@+id/button_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/correct"/>
        <Button
            android:id="@+id/button_higher"
            android:text="@string/higher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>